<Page x:Class="PRAlgorithm.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PRAlgorithm"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10" Grid.ColumnSpan="2" FontSize="20">请选择您要演示的功能</TextBlock>
        <Button x:Name="btnToCalculateDiversity"  Margin="10" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Top" MinWidth="150" MinHeight="100" Click="btnToCalculateDiversity_Click" Content="相异性矩阵计算" FontSize="14" />
        <Button x:Name="btnToCluster" Grid.Column="1"  Margin="10" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" MinWidth="150" MinHeight="100" Content="聚类算法" FontSize="14" Click="btnToCluster_Click" />
    </Grid>
</Page>
